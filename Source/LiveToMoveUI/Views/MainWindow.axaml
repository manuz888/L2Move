<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LiveToMoveUI.Views.MainWindow"
        Title="LiveToMoveUI"
        Width="220" Height="400"
        CanResize="False">
    
    <StackPanel Background="Black" Margin="10,0,10,0" Spacing="0">
        <TextBlock TextAlignment="Left"
                   FontSize="30"
                   Margin="0">
            L2Move
        </TextBlock>
        <TextBlock TextAlignment="Left"
                   FontSize="20"
                   Margin="0,-12,0,0">
            >Drum
        </TextBlock>
        
        <Border Width="200" Height="200"
                Background="Transparent"
                BorderBrush="White" BorderThickness="2" CornerRadius="5"
                Margin="0,18,0,0"
                DragDrop.AllowDrop="True">
            <TextBlock Name="DropBoxBlock" HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextAlignment="Center" TextWrapping="Wrap"
                       FontSize="12">
                Drop here or paste<LineBreak/>a drum rack .adg file<LineBreak/>or a directory with them
            </TextBlock>
        </Border>

        <TextBlock Name="ResultBlock" Margin="0,15,0,15" 
                   Background="LightGreen" Foreground="Black" 
                   TextAlignment="Center" VerticalAlignment="Center">
            Result: OK
        </TextBlock>
        
        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,5">
            <!-- Using Border to override the height of the Checkbox template -->
            <Border Grid.Column="0" Height="20">
                <CheckBox IsChecked="False"/>
            </Border>
            <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11">
                Generate report after processing
            </TextBlock>
            <!-- <ToolTip.Tip> -->
            <!--     <StackPanel> -->
            <!--         <TextBlock>Some explanation here.</TextBlock> -->
            <!--     </StackPanel> -->
            <!-- </ToolTip.Tip> -->
        </Grid>
        
        <Button Name="ProcessButton"
                Content="Start process"
                Width="200" Height="35">
        </Button>
    </StackPanel>
</Window>