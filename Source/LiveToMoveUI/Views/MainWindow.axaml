<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LiveToMoveUI.Views.MainWindow"
        Title="LiveToMoveUI"
        Width="220" Height="420"
        CanResize="False">
    
    <StackPanel Background="Black" Margin="10,0,10,0">
        <TextBlock TextAlignment="Left"
                   FontSize="45"
                   Margin="0,-10,0,0">
            L2Move
        </TextBlock>
        <TextBlock TextAlignment="Left"
                   FontSize="20"
                   Margin="0,-12,0,0">
            ::Drum
        </TextBlock>
        
        <Border Width="200" Height="200"
                Background="Transparent"
                BorderBrush="White" BorderThickness="2" CornerRadius="5"
                Margin="0,20,0,0"
                DragDrop.AllowDrop="True">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextAlignment="Center">
                Drop here or paste<LineBreak/>a drum rack .adg file or <LineBreak/>or a directory with them
            </TextBlock>
        </Border>

        <TextBlock TextAlignment="Center" Margin="0,12,0,12" Background="LightGreen" Foreground="Black">
            Result: OK
        </TextBlock>
        
        <Grid ColumnDefinitions="Auto,*,Auto">
            <CheckBox Grid.Column="0" IsChecked="False" />
            <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="11">
                Generate report after processing
            </TextBlock>
            <ToolTip.Tip>
                <StackPanel>
                    <TextBlock>Some explanation here.</TextBlock>
                </StackPanel>
            </ToolTip.Tip>
        </Grid>
        
        <Button Name="processButton"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                Background="Transparent" Foreground="White"
                BorderBrush="White" BorderThickness="2" CornerRadius="5"
                Content="Start process"
                Width="200" Height="40"
                Click="OnOkClicked">
        </Button>
    </StackPanel>
</Window>